<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apprenti.checkpoint1cozart98.StudentActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textViewPrenom"
        android:layout_width="198dp"
        android:layout_height="41dp"
        android:text=""
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewNom"
        app:layout_constraintBottom_toTopOf="@+id/textViewEcole"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEcole"
        android:layout_width="379dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNom"
        app:layout_constraintBottom_toTopOf="@+id/textViewLanguage" />

    <TextView
        android:id="@+id/textViewLanguage"
        android:layout_width="379dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text=""
        android:textColor="#8B0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEcole" />

    <TextView
        android:id="@+id/textViewNom"
        android:layout_width="185dp"
        android:layout_height="42dp"
        android:text=""
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewPrenom"
        app:layout_constraintBottom_toTopOf="@+id/textViewEcole" />

</android.support.constraint.ConstraintLayout>
